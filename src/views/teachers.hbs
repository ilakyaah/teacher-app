<div class="container">
  <h1 class="text-center">TEACHER DETAILS</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">SI.NO</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each teacher}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td><a href="/teacher/{{this.id}}/students">{{this.firstName}}</a></td>
        <td>{{this.lastName}}</td>
        <td><a href="/edit-teacher/{{this.id}}">Edit</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a class="btn btn-primary btn-lg" href="/add-teacher">Add Teacher</a>
</div>